<div class="small-11, column">

<%= form_for @question do |f| %>
  <%= f.label :title %>
  <%= f.text_area :title %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.submit 'Submit Changes' %>
<% end %>
</div>

<%= link_to 'Delete this question',
  question_path(@question.id),
  method: :delete %>
